@model Sitecore.Data.Items.Item
@using Sitecore.Mvc
@using BasicCompany.Feature.Blog
@using BasicCompany.Foundation.FieldRendering


@{
    var newsImageOptions = new Sitecore.Resources.Media.MediaUrlOptions
    {
        MaxWidth = 480,
        AllowStretch = false,
    };
}

<a href="@Html.Sitecore().ItemUrl(Model)" class="column product-list-column is-4-desktop is-6-tablet">
    <div class="card">
        <div class="card-image">
            <figure style="background-image: url(@Html.Sitecore().MediaUrl(Templates.Post.Fields.PreviewImage, Model, newsImageOptions))"></figure>
        </div>
        <div class="card-content">
            <div class="content">
                <h4>@Html.Sitecore().Field(Templates.Post.Fields.Title, Model)</h4>
                <p>@Html.Sitecore().Field(Templates.Post.Fields.ShortDescription, Model)</p>
                <p>@Html.Sitecore().Field(Templates.Post.Fields.Author, Model)</p>
                <p>Tag: @Html.Sitecore().Field(Templates.Post.Fields.Tags, Model)</p>
            </div>
        </div>
    </div>
</a>